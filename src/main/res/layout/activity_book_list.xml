<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <EditText
        android:hint="TODO search"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonAddBook"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonAddBook"
        android:imeOptions="actionDone"
        android:id="@+id/textAddBook"/>

    <Button
        android:id="@+id/buttonAddBook"
        android:text="TODO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/listBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAddBook"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/buttonAddBook"
        android:layout_alignParentStart="true" />

</RelativeLayout>